<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OptiLearn.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="OptiLearn.Views.MainWindow" ExtendClientAreaChromeHints="SystemChrome"
        Icon="/Assets/avalonia-logo.ico" Title="OptiLearn" Background="Transparent"
        TransparencyLevelHint="AcrylicBlur" ExtendClientAreaToDecorationsHint="True">

	<Window.Styles>
		<Style Selector="TextBlock.Header">
			<Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
			<Setter Property="FontFamily" Value="Overpass"/>
			<Setter Property="FontSize" Value="38"/>
			<Setter Property="FontWeight" Value="ExtraBold"/>
			<Setter Property="Margin" Value="18 18 18 0"/>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="FontFamily" Value="Raleway"/>
			<Setter Property="FontWeight" Value="Light"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>
		<Style Selector="TextBox">
			<Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignBody}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="32"/>
			<Setter Property="Height" Value="28"/>

			<Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
			<Setter Property="FontFamily" Value="Raleway"/>
			<Setter Property="FontWeight" Value="Light"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>
		<Style Selector="Button">
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="16"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Padding" Value="9 0"/>
			<Setter Property="Height" Value="24"/>
			
			<Setter Property="FontFamily" Value="Raleway"/>
			<Setter Property="FontWeight" Value="Light"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>
		<Style Selector="Grid.Sidebar">
			<Setter Property="Background" Value="{DynamicResource MaterialDesignBackground}"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="Width" Value="325"/>
		</Style>
		<Style Selector="CheckBox">
			<Setter Property="Margin" Value="12 6"/>
			
			<Setter Property="FontFamily" Value="Raleway"/>
			<Setter Property="FontWeight" Value="Light"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>
		<Style Selector="CheckBox:checked > TextBlock">
		</Style>
		<Style Selector="Button.Subject">
			<Setter Property="CornerRadius" Value="500"/>
			<Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
		</Style>
	</Window.Styles>

	<Grid Background="#701D1D1D" Margin="0 0 0 0">
		<TabControl TabStripPlacement="Left" SelectedIndex="0" VerticalAlignment="Stretch">
			<TabItem Header="Home">
				<Grid Background="#501D1D1D" RowDefinitions="auto, auto, *" ColumnDefinitions="*, auto, auto">
					<TextBlock Classes="Header" Text="Hello, Victor"/>
					<TextBlock Grid.Column="1" FontFamily="Overpass" Foreground="{DynamicResource TertiaryHueMidBrush}"
							   FontWeight="ExtraBold" FontSize="24" Text="738p" Margin="18 7" VerticalAlignment="Bottom"/>
					
					<TextBox Grid.Row="1" Grid.ColumnSpan="2" Watermark="Search subjects" Margin="18 7">
						<TextBox.InnerLeftContent>
							<Border Height="{Binding $parent[TextBox].Height}" Width="{Binding $self.Bounds.Height}">
								<avalonia:MaterialIcon HorizontalAlignment="Center" VerticalAlignment="Center" Kind="Magnify" Width="20" Height="20" />
							</Border>
						</TextBox.InnerLeftContent>
					</TextBox>
					
					<Grid Classes="Sidebar" Grid.Column="2" Grid.Row="0" Grid.RowSpan="10"
						  RowDefinitions="auto, *, auto, auto">
						<TextBlock Classes="Header" Text="Friends"/>
					</Grid>

					<Viewbox Stretch="Uniform" Grid.Row="2" Grid.ColumnSpan="2">
						<Canvas Width="300" Height="300">
							<Button Classes="Subject" Background="{DynamicResource TertiaryHueMidBrush}" Content="Algebra"
									Canvas.Top="50" Canvas.Left="50" Height="80" Width="80"/>
						</Canvas>
					</Viewbox>
				</Grid>
			</TabItem>
			
			<TabItem Header="Courses" x:Name="tCourses">
				<Grid Background="#501D1D1D" ColumnDefinitions="*, auto" RowDefinitions="auto, *" x:Name="grCourses">
					<TextBlock Classes="Header" Text="{Binding txName}"/>

					<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
						<TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding txContent}" FontSize="16" Margin="18 0"/>
					</ScrollViewer>
					
					<Grid Classes="Sidebar" Grid.Column="1" Grid.Row="0" Grid.RowSpan="10"
						  RowDefinitions="auto, *, auto, auto">
						<TextBlock Classes="Header" Text="Assistant"/>
						<StackPanel Grid.Row="1" Orientation="Vertical">
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
								<Border Background="{DynamicResource TertiaryHueMidBrush}" Height="20" Width="7" VerticalAlignment="Center" CornerRadius="0 3 3 0"/>
								<TextBlock Foreground="{DynamicResource TertiaryHueMidBrush}" Text="Hello! Need some help?" Margin="8 8 8 7" VerticalAlignment="Center"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
								<TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="Who started WW1?" Margin="8 8 8 7" VerticalAlignment="Center" HorizontalAlignment="Right"/>
								<Border Background="{DynamicResource MaterialDesignBody}" Height="20" Width="7" VerticalAlignment="Center" HorizontalAlignment="Right" CornerRadius="3 0 0 3"/>
							</StackPanel>
						</StackPanel>
						<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="12 0">
							<Button Content="summary" Margin="4 0" BorderBrush="{DynamicResource PrimaryHueMidBrush}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
							<Button Content="narrator" Margin="4 0" BorderBrush="{DynamicResource SecondaryHueMidBrush}" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
							<Button Content="visualize" Margin="4 0" BorderBrush="{DynamicResource TertiaryHueMidBrush}" Foreground="{DynamicResource TertiaryHueMidBrush}"/>
						</StackPanel>
						<TextBox  Grid.Row="3" Watermark="Ask anything" Margin="16 10 16 12">
							<TextBox.InnerLeftContent>
								<Border Width="10"/>
							</TextBox.InnerLeftContent>
						</TextBox>
					</Grid>
				</Grid>
			</TabItem>
			
			<TabItem Header="Plans">
				<Grid Background="#501D1D1D" ColumnDefinitions="*, auto">
					<Grid ColumnDefinitions="*" RowDefinitions="auto, *">
						<TextBlock Classes="Header" Text="Calendar"/>
						<Calendar Grid.Row="1" SelectionMode="SingleDate" FontFamily="Overpass" FontWeight="ExtraBold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
					</Grid>

					<Grid Classes="Sidebar" Grid.Column="1" ColumnDefinitions="*" RowDefinitions="auto, *, auto, auto, auto, auto">
						<TextBlock Classes="Header" Text="Schedule"/>

						<StackPanel Grid.Row="1">
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
								<Border Background="{DynamicResource PrimaryHueMidBrush}" Height="20" Width="7" VerticalAlignment="Center" CornerRadius="0 3 3 0"/>
								<TextBlock Text="Due" Margin="8 0 5 0" VerticalAlignment="Center"/>
								<TextBlock Text="Ancient Greece" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
								<Border Background="{DynamicResource MaterialDesignBody}" Height="20" Width="7" VerticalAlignment="Center" CornerRadius="0 3 3 0"/>
								<TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="Start" Margin="8 0 5 0" VerticalAlignment="Center"/>
								<TextBlock Foreground="{DynamicResource TertiaryHueMidBrush}" Text="Ancient Egypt" VerticalAlignment="Center"/>
							</StackPanel>
						</StackPanel>
						
						<TextBlock Classes="Header" Text="Sessions" Grid.Row="2" Grid.Column="1"/>
						
						<Grid Grid.Row="3" ColumnDefinitions="*, auto" Margin="16 0">
							<TextBlock Grid.Column="0" Text="study" Foreground="{DynamicResource MaterialDesignBody}"/>
							<TextBlock Grid.Column="1" Text="30m left" FontFamily="Overpass" FontWeight="ExtraBold" Foreground="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right"/>
						</Grid>

						<TimePicker Grid.Row="4">
							
						</TimePicker>
						
						<ProgressBar Background="{DynamicResource TertiaryHueMidBrush}" Value="30" Grid.Row="5" Grid.Column="1" Margin="16 2 16 16"/>
					</Grid>
				</Grid>
			</TabItem>
			<TabItem Header="Projects">
				<Grid ColumnDefinitions="*, auto">
					<Grid Classes="Sidebar" Grid.Column="1" RowDefinitions="auto, auto, *">
							<TextBlock Classes="Header" Text="Bullet points"/>
							<StackPanel Grid.Row="1">
								<CheckBox>
									<TextBlock TextWrapping="Wrap">Rafael are mere si merele lui rafael sunt bune si zemoase</TextBlock>
								</CheckBox>
								
							</StackPanel>
							<Button Classes="Outline" Content="Add task" HorizontalAlignment="Stretch" Foreground="{DynamicResource MaterialDesignBody}"
									ToolTip.Tip="Create a new task" Margin="12" Grid.Row="2" VerticalAlignment="Bottom"/>
					</Grid>
				</Grid>
			</TabItem>
	    </TabControl>
	</Grid>
</Window>
